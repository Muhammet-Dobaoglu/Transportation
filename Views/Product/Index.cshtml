@model List<Transportation.Models.TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Ürün Listesi</h2>

<table class="table table-bordered" >
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Boyut Tipi</th>
            <th>Ürün Boyutu</th>
            <th>Ürün Açıklaması</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.ProductName</td>
                <td>@item.ProductSizeType</td>
                <td>@item.ProductSize</td>
                <td>@item.ProductDescription</td>
                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
